<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <button type="button" class="m-0 btn btn-primary btn-sm" data-toggle="modal" data-target="#tambahPelanggan">Tambah
        Pelanggan</button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>NIK</th>
              <th>Nama Lengkap</th>
              <th>Email/Whatsapp</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% let no=1; %>
              <% data.forEach( element=> { %>
                <tr>
                  <td>
                    <%= no++ %>
                  </td>
                  <td>
                    <%= element.nik %>
                  </td>
                  <td><%= element.nama_lengkap %>
                  </td>
                  <td>
                    <span class="badge badge-info"><%= element.email %></span>
                    <span class="badge badge-primary"><%= element.no_whatsapp %></span>
                  </td>
                  <td>
                    <button type="button" data-toggle="modal" data-target="#editPelanggan<%= element.nik %>"
                      class="badge badge-warning border-0">edit</button>

                    <div class="modal fade" id="editPelanggan<%= element.nik %>" tabindex="-1" role="dialog"
                      aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Edit Pelanggan</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <form method="POST" action="/pelanggan/update">
                            <div class="modal-body">
                              <div class="form-group">
                                <label class="col-form-label">NIK:</label>
                                <input type="text" class="form-control" name="nik"
                                  value="<%= element.nik %>">
                              </div>
                              <div class="form-group">
                                <label class="col-form-label">Nama lengkap:</label>
                                <input type="text" class="form-control" name="nama_lengkap"
                                  value="<%= element.nama_lengkap %>">
                              </div>
                              <div class="form-group">
                                <label class="col-form-label">Email:</label>
                                <input type="text" class="form-control" name="email"
                                  value="<%= element.email %>">
                              </div>
                              <div class="form-group">
                                <label class="col-form-label">No Whatsapp:</label>
                                <input type="text" class="form-control" name="no_whatsapp"
                                  value="<%= element.no_whatsapp %>">
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
                              <button type="submit" class="btn btn-primary">Simpan</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                    <form action="/pelanggan/delete" method="POST" class="d-inline">
                      <input type="hidden" name="id" value="<%= element.id %>">
                      <button type="submit" class="badge badge-danger border-0">hapus</button>
                    </form>
                  </td>
                </tr>
                <% }) ;%>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->

<div class="modal fade" id="tambahPelanggan" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tambah Pelanggan Baru</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form method="POST" action="/pelanggan/addPelanggan">
        <div class="modal-body">
          <div class="form-group">
            <label class="col-form-label">NIK:</label>
            <input type="text" class="form-control" name="nik" placeholder="Tulis nama paket disini...">
          </div>
          <div class="form-group">
            <label class="col-form-label">Nama lengkap:</label>
            <input type="text" class="form-control" name="nama_lengkap" placeholder="Tulis nama paket disini...">
          </div>
          <div class="form-group">
            <label class="col-form-label">Email:</label>
            <input type="text" class="form-control" name="email" placeholder="Tulis nama paket disini...">
          </div>
          <div class="form-group">
            <label class="col-form-label">No Whatsapp:</label>
            <input type="text" class="form-control" name="no_whatsapp" placeholder="Tulis nama paket disini...">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-primary">Simpan</button>
        </div>
      </form>
    </div>
  </div>
</div>